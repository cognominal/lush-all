{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-svelte-app",
  "version": "0.1.0",
  "identifier": "com.lush.tauri_svelte_app",
  "build": {
    "beforeDevCommand": "bun run --cwd ../../svelte-app dev -- --host 127.0.0.1 --port 5173",
    "devUrl": "http://127.0.0.1:5173",
    "beforeBuildCommand": "bun run --cwd ../../svelte-app build:tauri",
    "frontendDist": "../../svelte-app/build"
  },
  "app": {
    "windows": [
      {
        "title": "Lush",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
